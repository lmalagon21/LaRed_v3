<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".transferir_puntos">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eres parte de LaRed"
            android:id="@+id/estas_enred"
            android:textColor="#009688" android:textColorHighlight="#E91E63"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Transfiere puntos a tus familiares o amigos"
            android:layout_width="245dp"
            android:layout_height="0dp"
            android:id="@+id/label_transferirpuntos" android:textColor="#009688"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/estas_enred"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" android:layout_marginTop="40dp"/>
    <TextView
            android:text="Número Móvil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_transferir_movil" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/label_transferirpuntos"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/transferir_movil" android:maxLength="10" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_transferir_movil"
            app:layout_constraintEnd_toEndOf="parent" android:gravity="center"/>
    <TextView
            android:text="Cuantos puntos deseas transferir?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_valortransferir" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/transferir_movil" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/valor_transferir" android:gravity="center" android:textColor="#009688"
            app:layout_constraintStart_toStartOf="@+id/label_valortransferir" android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp" app:layout_constraintTop_toBottomOf="@+id/label_valortransferir"/>
    <Button
            android:text="Transferir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/transferir_puntos" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="160dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="160dp" android:layout_marginBottom="136dp" android:background="#FBFBFB"
            android:textColor="#FF5722"/>

</androidx.constraintlayout.widget.ConstraintLayout>